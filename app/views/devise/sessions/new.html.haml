%h2= t('devise.general.sign_in')
= simple_form_for resource, url: session_path(resource_name) do |f|
  = f.input :email
  = f.input :password

  / - if devise_mapping.rememberable?
  /   = f.check_box :remember_me
  /   = f.label :remember_me

  .button-row
    = f.submit t('devise.general.sign_in')
    = link_to t('devise.general.forgot_password'), new_password_path(:user)

/ = render :partial => "devise/shared/links"
