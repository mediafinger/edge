- if @authentications
  - unless @authentications.empty?
    %p
      %strong You can sign in to this account using:
    .authentications
      - for authentication in @authentications
        .authentication
          = image_tag "auth/#{authentication.provider}_32.png", :size => "32x32"
          .provider= authentication.provider
          .uid= authentication.uid
          = link_to "X", authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove"                                                      |
      .clear
  %p
    %strong Add another service to sign in with:
- else
  %p
    %strong Sign in through one of these services:
%a.auth_provider{:href => "/auth/twitter"}
  = image_tag "auth/twitter_32.png", :size => "32x32", :alt => "Twitter"
  Twitter
%a.auth_provider{:href => "/auth/google_apps"}
  = image_tag "auth/google_32.png", :size => "32x32", :alt => "Google"
  Google
%a.auth_provider{:href => "/auth/github"}
  = image_tag "auth/github_32.png", :size => "32x32", :alt => "GitHub"
  GitHub
%a.auth_provider{:href => "/auth/facebook"}
  = image_tag "auth/facebook_32.png", :size => "32x32", :alt => "Facebook"
  Facebook
%a.auth_provider{:href => "/auth/open_id"}
  = image_tag "auth/openid_32.png", :size => "32x32", :alt => "OpenID"
  OpenID
.clear

